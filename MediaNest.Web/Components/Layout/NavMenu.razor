<nav class="navbar navbar-expand-md navbar-dark bg-dark mb-4">
    <div class="container-fluid">
        <a class="navbar-brand" href="">MediaNest</a>
        <button class="navbar-toggler @NavButtonCssClass" type="button" data-bs-toggle="collapse" data-bs-target="#navbarCollapse"
                aria-controls="navbarCollapse" aria-label="Toggle navigation" @onclick="ToggleNavMenu">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse @NavBarCssClass" id="navbarCollapse" @onclick="ToggleNavMenu">
            <ul class="navbar-nav me-auto mb-2 mb-md-0">
                <li class="nav-item">
                    <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                        <span class="oi oi-home" aria-hidden="true"></span> Home
                    </NavLink>
                </li>
                <li class="nav-item">
                    <NavLink class="nav-link" href="counter">
                        <span class="oi oi-plus" aria-hidden="true"></span> Counter
                    </NavLink>
                </li>
                <li class="nav-item">
                    <NavLink class="nav-link" href="comic">
                        <span class="oi oi-plus" aria-hidden="true"></span> Comic
                    </NavLink>
                </li>
                <li class="nav-item">
                    <NavLink class="nav-link" href="game">
                        <span class="oi oi-plus" aria-hidden="true"></span> Game
                    </NavLink>
                </li>

            </ul>
            <!-- 右側使用者區塊 (必須是另一個 navbar-nav，並用 ms-auto) -->
            <ul class="navbar-nav ms-auto mb-2 mb-md-0">
                <li class="nav-item d-flex align-items-center">
                    <AuthorizeView>
                        <Authorized Context="auth">
                            <span class="navbar-text me-2">Hello, @auth.User.Identity?.Name!</span>

                            <AuthorizeView Roles="Admin">
                                <a href="/settings" class="btn btn-outline-light btn-sm me-2">Settings</a>
                            </AuthorizeView>
                            <a href="/account/logout" class="btn btn-outline-light btn-sm">Logout</a>
                        </Authorized>
                        <NotAuthorized>
                            <a href="/account/login" class="btn btn-outline-light btn-sm me-2">Login</a>
                            <a href="/account/register" class="btn btn-outline-light btn-sm">Register</a>
                        </NotAuthorized>
                    </AuthorizeView>
                </li>
            </ul>
        </div>
    </div>
</nav>

@code {
    private bool collapseNavMenu = true;
    private string? NavBarCssClass => collapseNavMenu ? null : "show";
    private string? NavButtonCssClass => collapseNavMenu ? "collapsed" : null;

    private void ToggleNavMenu() {
        collapseNavMenu = !collapseNavMenu;
    }
}
